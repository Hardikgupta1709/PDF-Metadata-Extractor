# Replace the entire .gitignore file
cat > .gitignore << 'EOF'
# Credentials & Secrets
*.json
*.key.json
client_secret.json
service-account*.json
credentials.json
*-credentials.json

# Streamlit secrets
.streamlit/secrets.toml
.streamlit/*.pickle

# Environment
.env
.env.local
*.key

# Local storage
submitted_papers/
submissions.csv

# Python
__pycache__/
*.pyc
*.pyo
.pytest_cache/
venv/
.venv/

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS
.DS_Store
Thumbs.db

# Dev containers
.devcontainer/devcontainer.json
EOF